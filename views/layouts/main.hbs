<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/logo.png" type="image/png" />

    <title>{{title}}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Anton&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
        rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>

  <body>
      {{#if session.user}}
      <div class="navbar" id="authNavbar" class="d-flex justify-content-between">
        <a href="/"><h2 class="anton-regular">AI Clauset</h2></a>
        <h3>Hello, {{session.user.name}}</h3>
        <div id="authNavLinks">
            <a href="/account">My Account</a>
            <a href="/logout">Logout</a>
        </div>
      </div>
      {{else}}
      <div class="navbar" class="d-flex justify-content-between">
        <h2 class="anton-regular">AI Clauset</h2>
        <div>
            <a href="/signup">
                <button type="button" class="btn btn-outline-light" id="getin-btn" >Sign Up</button>
            </a>
            <a href="/login">
                <button type="button" class="btn btn-outline-light" id="getin-btn">Login</button>
            </a>
        </div>
      </div>
      {{/if}}
    {{{body}}}

    <div class="footer">
        <p>&copy; 2024 AI Clauset</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/scripts/main.js"></script>

  </body>

</html>