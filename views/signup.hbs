<div id="getin" class="section">
    {{#if error}}
        <div id="error" class="alert alert-danger" role="alert">{{error}}</div>
    {{/if}}
    <br>
    <h1>Sign Up</h1>
    <br><br>
    <form name="signup" method="post" action="/signup">
        <input type="text" class="form-control" name="name" placeholder="Your name" autocomplete="off" required>
        <br>
        <input type="email" class="form-control" name="email" placeholder="Email" autocomplete="off" required>
        <br>
        <input type="password" class="form-control" name="password" placeholder="Password" required>
        <br><br>
        <button type="submit" class="btn btn-light">Create my account</button>
    </form>
</div>